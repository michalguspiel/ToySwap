<?xml version="1.0" encoding="utf-8"?>
<com.erdees.toyswap.MaskedItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/item_additional_information_box"
    android:paddingHorizontal="6dp"
    android:paddingVertical="1dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.ToySwap.box">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_additional_information_box"
>
    <TextView
        android:id="@+id/itemAdditionalInfoBoxTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="1dp"
        android:textSize="14sp"
        tools:text="Size: 52" />
</FrameLayout>

</com.erdees.toyswap.MaskedItemView>