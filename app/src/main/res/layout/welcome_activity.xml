<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signWithEmailBtn"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:foregroundGravity="center"
        android:text="@string/login_with_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signWithGoogleBtn"
        style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:text="@string/login_with_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signWithEmailBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signAnnon"
        style="@style/FirebaseUI.Button.AccountChooser.AnonymousButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/continue_without_signing_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signWithGoogleBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>